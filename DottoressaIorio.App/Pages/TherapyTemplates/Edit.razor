<!-- Pages/therapy-templates/Edit.razor -->
@page "/therapy-templates/edit/{id:int}"
@using DottoressaIorio.App.Models
@using DottoressaIorio.App.Data
@inject ApplicationDbContext dbContext
@inject NavigationManager navigationManager

<PageTitle>Edit Therapy Template</PageTitle>
<h1>Edit Therapy Template</h1> 

<EditForm Model="@model" OnValidSubmit="@UpdateTemplate">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="Title">Title:</label>
        <InputText id="Title" @bind-Value="model.Title" class="form-control" />
        <ValidationMessage For="@(() => model.Title)" />
    </div>

    <div class="form-group">
        <label for="Description">Description:</label>
        <InputTextArea id="Description" @bind-Value="model.Description" class="form-control" />
        <ValidationMessage For="@(() => model.Description)" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</EditForm>

@code {
    [Parameter]
    public int Id { get; set; }

    private TherapyTemplate model;

    protected override void OnInitialized()
    {
        model = dbContext.TherapyTemplates.Find(Id);
    }

    private async Task UpdateTemplate()
    {
        dbContext.TherapyTemplates.Update(model);
        await dbContext.SaveChangesAsync();
        navigationManager.NavigateTo("/therapy-templates");
    }
}