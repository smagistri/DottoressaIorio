@page "/therapies/edit/{id:int}"
@using DottoressaIorio.App.Models
@using DottoressaIorio.App.Data
@inject ApplicationDbContext dbContext
@inject NavigationManager navigationManager

<PageTitle>Edit Therapy</PageTitle>
<h1>Edit Therapy</h1>

<EditForm Model="@model" OnValidSubmit="@UpdateTherapy">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="Description">Description:</label>
        <InputTextArea id="Description" @bind-Value="model.Description" class="form-control" />
        <ValidationMessage For="@(() => model.Description)" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-secondary" href="/patient/@model.PatientId">Cancel</a>
</EditForm>

@code {
    [Parameter]
    public int Id { get; set; }

    private Therapy model;

    protected override void OnInitialized()
    {
        model = dbContext.Therapies.First(t => t.TherapyId == Id);
    }

    private async Task UpdateTherapy()
    {
        dbContext.Therapies.Update(model);
        await dbContext.SaveChangesAsync();
        navigationManager.NavigateTo($"/patient/{model.PatientId}/");
    }
}