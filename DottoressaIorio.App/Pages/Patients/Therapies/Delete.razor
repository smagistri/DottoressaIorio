@page "/therapies/delete/{id:int}"
@using DottoressaIorio.App.Models
@using DottoressaIorio.App.Data 
@inject ApplicationDbContext dbContext
@inject NavigationManager navigationManager
 
<PageTitle>Delete Therapy</PageTitle>
<h1>Delete Therapy</h1>

<p>Are you sure you want to delete this therapy?</p>

<button class="btn btn-danger" @onclick="DeleteTherapy">Delete</button>
<a class="btn btn-secondary" href="/patient/@model.PatientId">Cancel</a>

@code {
    [Parameter]
    public int Id { get; set; }

    private Therapy model;

    protected override void OnInitialized()
    {
        model = dbContext.Therapies.FirstOrDefault(t => t.TherapyId == Id);
    }

    private async Task DeleteTherapy()
    {
        model.EditDate = DateTime.Now;
        model.Deleted = true;
        dbContext.Therapies.Update(model);
        await dbContext.SaveChangesAsync();
        navigationManager.NavigateTo($"/patient/{model.PatientId}/");
    }
}
